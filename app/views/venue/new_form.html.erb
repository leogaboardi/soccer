<!-- Validation failure messages -->
<% if @venue.errors != nil %>
  <% if @venue.errors.any? %>
    <% @venue.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <h1>Add new venue</h1>
    <br>
    <form action="/create_venue" class="form-horizontal">
      <!-- Label and input for venue name -->
      <div class="form-group">
        <label for="label" class="col-sm-3 control-label">
          Venue name
        </label>
        <div class="col-sm-9">
          <input type="text" id="label" name="label" placeholder="Venue name (e.g. MaracanÃ£)" class="form-control">
        </div>
      </div>

      <!-- Label and input for system name -->
      <div class="form-group">
        <label for="name" class="col-sm-3 control-label">
          System name
        </label>
        <div class="col-sm-9">
          <input type="text" id="name" name="name" placeholder="System name (e.g. maracana_rj)" class="form-control">
        </div>
      </div>

      <!-- Label and input for capacity -->
      <div class="form-group">
        <label for="capacity" class="col-sm-3 control-label">
          Venue capacity
        </label>
        <div class="col-sm-9">
          <input type="text" id="capacity" name="capacity" placeholder="99999" class="form-control">
        </div>
      </div>

      <!-- Label and input for venue address -->
      <div class="form-group">
        <label for="address" class="col-sm-3 control-label">
          Venue address
        </label>
        <div class="col-sm-9">
          <input type="text" id="address" name="address" placeholder="Address" class="form-control">
        </div>
      </div>

      <!-- Label and input for venue picture -->
      <div class="form-group">
        <label for="picture" class="col-sm-3 control-label">
          Venue picture
        </label>
        <div class="col-sm-9">
          <input type="text" id="picture_url" name="picture_url" placeholder="Picture URL" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <input type="submit" value="Create venue" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

