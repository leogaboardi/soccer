<!-- Validation failure messages -->
<% if @venue.errors != nil %>
  <% if @venue.errors.any? %>
    <% @venue.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <h1>Edit venue</h1>
    <br>
    <form action="/update_venues/<%= @venue.id %>" class="form-horizontal">
      <!-- Label and input for venue name -->
      <div class="form-group">
        <label for="label" class="col-sm-3 control-label">
          Venue name
        </label>
        <div class="col-sm-9">
          <input type="text" id="label" name="label" value="<%= @venue.label %>" class="form-control">
        </div>
      </div>

      <!-- Label and input for system name -->
      <div class="form-group">
        <label for="name" class="col-sm-3 control-label">
          System name
        </label>
        <div class="col-sm-9">
          <input type="text" id="name" name="name" value="<%= @venue.name %>" class="form-control">
        </div>
      </div>

      <!-- Label and input for capacity -->
      <div class="form-group">
        <label for="capacity" class="col-sm-3 control-label">
          Venue capacity
        </label>
        <div class="col-sm-9">
          <input type="text" id="capacity" name="capacity" value="<%= @venue.capacity %>" class="form-control">
        </div>
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="col-sm-3 control-label">
          Venue address
        </label>
        <div class="col-sm-9">
          <input type="text" id="address" name="address" value="<%= @venue.address %>" class="form-control">
        </div>
      </div>

      <!-- Label and input for picture -->
      <div class="form-group">
        <label for="picture_url" class="col-sm-3 control-label">
          Venue picture
        </label>
        <div class="col-sm-9">
          <input type="text" id="picture_url" name="picture_url" value="<%= @venue.picture_url %>" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <input type="submit" value="Edit venue" class="btn btn-primary">
        </div>
      </div>
    </form>
    <div class="col-md-12">
      <a href="/venues">Go back</a>
      <br>
    </div>
  </div>
</div>

