<div class="row">
  <div class="col-md-12">
  <br>
    <dl class="dl-horizontal">
      <dt>User ID</dt>
      <dd><%= @bet.user_id %></dd>
      <dt>Username</dt>
      <dd><%= @bet.user.username %></dd>
      <dt>Match ID</dt>
      <dd><%= @bet.match_id %></dd>
      <dt>Match</dt>
      <dd><%= @bet.match.home_team.label %> x <%= @bet.match.away_team.label %> (<%= @bet.match.match_on%>)</dd>
      <dt>Bet</dt>
      <dd>
        <% case @bet.bet %>
          <% when 1 %>
          Home victory
        <% when 0 %>
          Draw
        <% when -1 %>
          Away victory
        <% end %>
      </dd>
      <dt>Last edited</dt>
      <dd><%= @bet.updated_at %></dd>
    </dl>
  </div>
  <div class="col-md-12">
    <br>
    <a href="/bets">Go back</a>
    <br>
  </div>
</div>
