<div class="row">
  <div class="col-md-12">
  <br>
    <dl class="dl-horizontal">
      <% if @bet.user.present? %>
      <dt>User ID</dt>
      <dd><%= @bet.user_id %></dd>
      <dt>Username</dt>
      <dd><%= @bet.user.username %></dd>
      <% end %>
      <dt>Match ID</dt>
      <dd>
        <% if @bet.match.present? %>
        <%= @bet.match_id %>
        <% else %>
        Error: match not found!
        <% end %>
      </dd>
      <dt>Match</dt>
      <dd>
        <% if @bet.match.present? %>
        <%= @bet.match.label %>
        <% else %>
        Error: match not found!
        <% end %>
      </dd>
      <dt>Bet</dt>
      <dd>
        <% case @bet.bet %>
          <% when 1 %>
          Home victory
        <% when 0 %>
          Draw
        <% when -1 %>
          Away victory
        <% end %>
      </dd>
      <dt>Last edited</dt>
      <dd><%= @bet.updated_at %></dd>
    </dl>
  </div>
  <div class="col-md-12">
    <br>
    <a href="/bets">Go back</a>
    <br>
  </div>
</div>
