<div class="row">
  <div class="col-md-12">

    <h1>Manage matches</h1>
    <p><a href="/matches/new_form" class="btn btn-primary">Add new match</a></p>
    <table class="table table-striped">
      <tr>
        <th>Tournament</th>
        <th>Round</th>
        <th>Date</th>
        <th>Time</th>
        <th>Venue</th>
        <th>Home team</th>
        <th></th>
        <th></th>
        <th></th>
        <th>Away team</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @match.each do |match| %>
      <tr>
        <td><%= match.tournament %></td>
        <td><%= match.round %></td>
        <td><%= match.date %></td>
        <td><%= match.time %></td>
        <td><%= match.venue %></td>
        <td><img src="<%= match.home_team_id %>"></td>
        <td></td>
        <td >X</td>
        <td></td>
        <td><%= match.away_team_id %></td>
        <td><a href="matches/<%= match.id %>">View</a></td>
        <td><a href="matches/<%= match.id %>/edit_form">Edit</a></td>
        <td><a href="matches/<%= match.id %>/delete">Delete</a></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
