<div class="row">
  <div class="col-md-12">
  <% if current_user.admin? %>
    <h1>Manage users</h1>
    <p><a href="/users/new_form" class="btn btn-primary">Add new user</a></p>
    <table class="table table-striped">
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Admin?</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @user.each do |user| %>
      <tr>
        <td ><%= user.username %></td>
        <td ><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><a href="users/<%= user.id %>">View</a></td>
        <td><a href="users/<%= user.id %>/edit_form">Edit</a></td>
        <td><a href="users/<%= user.id %>/delete">Delete</a></td>
      </tr>
      <% end %>
    </table>
  <% else %>
    <p>Page unavailable =(</p>
  <% end %>
  </div>
</div>
