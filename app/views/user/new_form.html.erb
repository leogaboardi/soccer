<!-- Validation failure messages -->
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>
  <% end %>

<div class="row">
  <div class="col-md-12">
    <h1>Add new user</h1>
    <br>
    <form action="/create_user" class="form-horizontal">
      <!-- Label and input for username -->
      <div class="form-group">
        <label for="username" class="col-sm-3 control-label">
          Username
        </label>
        <div class="col-sm-9">
          <input type="text" id="username" name="username" placeholder="Username" class="form-control">
        </div>
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="col-sm-3 control-label">
          Email
        </label>
        <div class="col-sm-9">
          <input type="email" id="email" name="email" placeholder="username@xyz.com" class="form-control">
        </div>
      </div>

      <!-- Label and input for password -->
      <div class="form-group">
        <label for="password" class="col-sm-3 control-label">
          Password
        </label>
        <div class="col-sm-9">
          <input type="password" id="password" name="password" placeholder="8 digits minimum" class="form-control">
        </div>
      </div>

      <!-- Label and input for password_confirmation -->
      <div class="form-group">
        <label for="password_confirmation" class="col-sm-3 control-label">
          Confirm password
        </label>
        <div class="col-sm-9">
          <input type="password" id="password_confirmation" name="password_confirmation" class="form-control">
        </div>
      </div>

      <!-- Admin checkbox -->
      <div class="col-sm-9 col-sm-offset-3">
        <div class="checkbox">
          <label>
            <input type="checkbox" name="admin" value="true">
            Admin rights?
          </label>
        </div>
      </div>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <br>
          <input type="submit" value="Create user" class="btn btn-primary">
        </div>
      </div>

    </form>

    <div class="col-md-12">
      <a href="/users">Go back</a>
    </div>
  </div>
</div>

