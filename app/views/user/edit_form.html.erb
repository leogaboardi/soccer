<div class="row">
  <div class="col-md-12">
    <h1>Edit user</h1>
    <br>
    <form action="/update_users/<%= @user.id %>" class="form-horizontal">
      <!-- Label and input for username -->
      <div class="form-group">
        <label for="username" class="col-sm-3 control-label">
          Username
        </label>
        <div class="col-sm-9">
          <input type="text" id="username" name="username" value="<%= @user.username %>" class="form-control">
        </div>
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="col-sm-3 control-label">
          User email
        </label>
        <div class="col-sm-9">
          <input type="text" id="email" name="email" value="<%= @user.email %>" class="form-control">
        </div>
      </div>

      <!-- Label and input for admin -->
      <div class="checkbox disabled">
      <label>
        <input type="checkbox" name="admin" value="" <% if @user.admin == 0  %> disabled <% end %> >
        Admin rights?
      </label>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <input type="submit" value="Edit user" class="btn btn-primary">
        </div>
      </div>
    </form>
    <div class="col-md-12">
      <a href="/users">Go back</a>
      <br>
    </div>
  </div>
</div>

