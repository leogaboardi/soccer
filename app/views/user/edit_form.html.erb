<!-- Validation failure messages -->
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>
  <% end %>

<div class="row">
  <div class="col-md-12">
    <% if current_user.admin? %>
    <h1>Edit user</h1>
    <br>
    <form action="/update_users/<%= @user.id %>" class="form-horizontal">
      <!-- Label and input for username -->
      <div class="form-group">
        <label for="username" class="col-sm-3 control-label">
          Username
        </label>
        <div class="col-sm-9">
          <input type="text" id="username" name="username" value="<%= @user.username %>" class="form-control">
        </div>
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="col-sm-3 control-label">
          User email
        </label>
        <div class="col-sm-9">
          <input type="email" id="email" name="email" value="<%= @user.email %>" class="form-control">
        </div>
      </div>

      <!-- Label and input for admin -->
      <div class="col-sm-9 col-sm-offset-3">
        <div class="checkbox">
          <label>
            <input type="checkbox" name="admin" value="true" <% if @user.admin == true  %> checked <% end %> >
            Admin rights?
          </label>
          </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <input type="submit" value="Edit user" class="btn btn-primary">
        </div>
      </div>
    </form>
    <% else %>
    <p>Page unavailable =(</p>
    <% end %>
    <div class="col-md-12">
      <br>
      <a href="/users">Go back</a>
      <br>
    </div>
  </div>
</div>

