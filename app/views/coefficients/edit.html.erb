<!-- Validation failure messages -->
<% if @coefficient.errors != nil %>
  <% if @coefficient.errors.any? %>
    <% @coefficient.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <h1>Edit coefficient</h1>
    <br>
    <%= form_tag coefficient_path(@coefficient), :class => "form-horizontal", :method => "put" do %>
      <!-- User id -->
      <div class="form-group">
        <label for="user_id" class="col-sm-3 control-label">
          User id
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'user_id', @coefficient.user_id, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for coefficient scope -->
      <div class="form-group">
        <label for="scope" class="col-sm-3 control-label">
          Scope
        </label>
        <div class="col-sm-4">
           <%= select_tag "scope", options_for_select(["attendance", "victory"], @coefficient.scope), include_blank: true, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for coefficient name -->
      <div class="form-group">
        <label for="name" class="col-sm-3 control-label">
          Name
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'name', @coefficient.name, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for coefficient value -->
      <div class="form-group">
        <label for="name" class="col-sm-3 control-label">
          Value
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'value', @coefficient.value, class: 'form-control' %>
        </div>
      </div>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <input type="submit" value="Update coefficient" class="btn btn-primary">
        </div>
      </div>

    <% end %>


    <div class="col-md-12">
      <br>
      <%= link_to "Go back", coefficients_path %>
      <br>
    </div>
  </div>
</div>
