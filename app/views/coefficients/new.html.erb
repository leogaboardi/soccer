<!-- Validation failure messages -->
<% if @coefficient.errors != nil %>
  <% if @coefficient.errors.any? %>
    <% @coefficient.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <h1>Add new coefficient</h1>
    <br>
    <%= form_tag "/coefficients", :class => "form-horizontal", :method => "post" do %>


      <!-- User id -->
      <input type="hidden" id="user_id" name="user_id" value=<%= current_user.id %> class="form-control">

      <!-- Label and input for coefficient scope -->
      <div class="form-group">
        <label for="scope" class="col-sm-3 control-label">
          Scope
        </label>
        <div class="col-sm-4">
          <div class="dropdown customizeMenu">
            <%= select_tag "scope", options_for_select(["attendance", "victory"]), include_blank: true, class: 'form-control' %>
          </div>
        </div>
      </div>

      <!-- Label and input for coefficient name -->
      <div class="form-group">
        <label for="name" class="col-sm-3 control-label">
          Name
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'name', nil, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for coefficient value -->
      <div class="form-group">
        <label for="name" class="col-sm-3 control-label">
          Value
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'value', nil, class: 'form-control' %>
        </div>
      </div>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <input type="submit" value="Create coefficient" class="btn btn-primary">
        </div>
      </div>

    <% end %>

    <div class="col-md-12">
      <br>
      <%= link_to "Go back", coefficients_path %>
      <br>
    </div>
  </div>
</div>

