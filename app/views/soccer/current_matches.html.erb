<div class="row">
  <h2><%= @match.tournament %></h2>
  <h2><%= @match.round %></h2>
  <h3><%= @date %></h3>
  <h3>Match current id: <%= @current_id %></h3>
</div>
<div class="row" id="containerCenter">
  <div class="row">
    <div class="row">
      <div class="col-xs-4">
      <img src=<%= @match.home_team.team.crest %>>
      <br>
      <p class="text-center"><%= @match.home_team.team.label %></p>
      </div>
      <div class="col-xs-1">
        <p class="score"><%= @match.home_goal %></p>
      </div>
      <div class="col-xs-2">
        <p class="score">x</p>
      </div>
      <div class="col-xs-1">
        <p class="score"><%= @match.away_goal %></p>
      </div>
      <div class="col-xs-4">
        <img src=<%= @match.away_team.team.crest %>>
        <br>
        <p class="text-center"><%= @match.away_team.team.label %></p>
      </div>
    </div>
    <div class="row">
      <form action="/current/<%= @match.id %>/1/create_bet">
        <div class="col-xs-4" style="text-align: center">
          <button type="submit" name="guess" class="btn btn-primary" value="1">Bet this team</button>
        </div>
        <div class="col-xs-4" style="text-align: center">
          <button type="submit" name="guess" class="btn btn-primary" value="0">Bet a draw</button>
        </div>
        <div class="col-xs-4" style="text-align: center">
          <button type="submit" name="guess" class="btn btn-primary" value="-1">Bet this team</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- Pagination -->
<div class="row" style="text-align: center">
  <div class="col-lg-12">
    <ul class="pagination">
      <li><a href="#">&laquo;</a></li>
      <li><a href="/current/1">1</a></li>
      <li><a href="/current/2">2</a></li>
      <li><a href="/current/3">3</a></li>
      <li><a href="/current/4">4</a></li>
      <li><a href="/current/5">5</a></li>
      <li><a href="#">&raquo;</a></li>
    </ul>
  </div>
</div>
<!-- Pagination ends -->
