<div class="row">
<div class="alert alert-success" role="alert">Thanks! Check what others think about this match!</div>
</div>
<!-- Match panel starts -->
<div class="row">
  <h2><%= @match.tournament %></h2>
  <h2><%= @match.round %></h2>
  <h3><%= @date %></h3>
  <h3>Match current id: <%= @match.id %></h3>
</div>

<div class="row" id="containerCenter">
  <div class="row">
    <div class="row">
      <div class="col-xs-4">
      <img src=<%= @match.team.logo %>>
      <br>
      <p class="text-center"><%= @match.team.label %></p>
      <p class="text-center">Count of bets: <%= Bet.all.count %></p>
      </div>
      <div class="col-xs-1">
        <p class="score"></p>
      </div>
      <div class="col-xs-2">
        <p class="score">x</p>
      </div>
      <div class="col-xs-1">
        <p class="score"></p>
      </div>
      <div class="col-xs-4">
        <img src="http://cdn.cbf.com.br/cbf/imagens/escudos/00019sp.jpg">
      </div>
    </div>
  </div>
</div>
<!-- Match panel ends -->
<!--Vote bars start -->
<div class="row">
  <div class="row">
    <h3>What everyone is betting </h3>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <p style="text-align: right">Home team victory</p>
    </div>
    <div class="col-xs-8">
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="100%" aria-valuemin="0" aria-valuemax="100" style="width: <%= ((Bet.all.count-10).to_f/Bet.all.count)*100 %>%">
          <%= (((Bet.all.count-10).to_f/Bet.all.count)*100).round(0) %>%
        </div>
      </div>
    </div>
    <div class="col-xs-1">

    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <p style="text-align: right">Draw</p>
    </div>
    <div class="col-xs-8">
      <div class="progress">
        <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 10%;">
          10%
        </div>
      </div>
    </div>
    <div class="col-xs-1">

    </div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <p style="text-align: right">Away team victory</p>
    </div>
    <div class="col-xs-8">
      <div class="progress">
        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 30%;">
          30%
        </div>
      </div>
    </div>
    <div class="col-xs-1">
    <span class="badge">You</span>
    </div>
  </div>
</div>

