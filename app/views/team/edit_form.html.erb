<div class="row">
  <div class="col-md-12">
    <h1>Edit team</h1>
    <br>
    <form action="/update_teams/<%= @team.id %>" class="form-horizontal">
      <!-- Label and input for team name -->
      <div class="form-group">
        <label for="label" class="col-sm-3 control-label">
          Team name
        </label>
        <div class="col-sm-9">
          <input type="text" id="label" name="label" value="<%= @team.label %>" class="form-control">
        </div>
      </div>

      <!-- Label and input for system name -->
      <div class="form-group">
        <label for="name" class="col-sm-3 control-label">
          System name
        </label>
        <div class="col-sm-9">
          <input type="text" id="name" name="name" value="<%= @team.name %>" class="form-control">
        </div>
      </div>

      <!-- Label and input for image_url -->
      <div class="form-group">
        <label for="image_url" class="col-sm-3 control-label">
          Crest url
        </label>
        <div class="col-sm-9">
          <input type="text" id="image_url" name="image_url" value="<%= @team.logo %>" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <input type="submit" value="Edit team" class="btn btn-primary">
        </div>
      </div>
    </form>
    <div class="col-md-12">
      <a href="/teams">Go back</a>
      <br>
    </div>
  </div>
</div>

