<!-- Validation failure messages -->
<% if @team.errors != nil %>
  <% if @team.errors.any? %>
    <% @team.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <h1>Add new team</h1>
    <br>
    <form action="/create_team" class="form-horizontal">
      <!-- Label and input for team name -->
      <div class="form-group">
        <label for="label" class="col-sm-3 control-label">
          Team name
        </label>
        <div class="col-sm-9">
          <input type="text" id="label" name="label" placeholder="Team name (e.g. SÃ£o Paulo)" class="form-control">
        </div>
      </div>

      <!-- Label and input for system name -->
      <div class="form-group">
        <label for="name" class="col-sm-3 control-label">
          System name
        </label>
        <div class="col-sm-9">
          <input type="text" id="name" name="name" placeholder="System name (e.g. sao_paulo_sp)" class="form-control">
        </div>
      </div>

      <!-- Label and input for crest_url -->
      <div class="form-group">
        <label for="crest_url" class="col-sm-3 control-label">
          Crest url
        </label>
        <div class="col-sm-9">
          <input type="text" id="crest_url" name="crest_url" placeholder="Crest url" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <input type="submit" value="Create Team" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

